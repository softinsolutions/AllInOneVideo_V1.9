<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_view_white"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardBackgroundColor="@color/card_view_white"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_report"
                fontPath="fonts/Montserrat-SemiBold_0.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/report_message"
                android:textColor="@color/report_title"
                android:textSize="18sp"
                tools:ignore="MissingPrefix" />

            <View
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/home_line_bg" />

            <EditText
                android:id="@+id/et_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/report_edit_bg"
                android:gravity="top"
                android:hint="@string/report_message"
                android:maxLines="5"
                android:minLines="4"
                android:padding="12dp"
                android:textCursorDrawable="@drawable/cursor_black"
                android:textColor="@color/report_edit_text"
                android:textColorHint="@color/report_edit_text"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button_report_submit"
                fontPath="fonts/Montserrat-SemiBold_0.otf"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_report_background"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@string/submit"
                android:textColor="@color/report_btn_text"
                tools:ignore="MissingPrefix" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>