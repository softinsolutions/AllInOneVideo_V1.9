<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <solid android:color="#11000000" />
            <corners android:radius="25dp" />
        </shape>
    </item>



    <item>
        <shape>
            <gradient
                android:angle="135"
                android:endColor="#FFFFFF"
                android:startColor="#FFFFFF"  />
            <corners android:radius="25dp" />
        </shape>
    </item>
</layer-list>